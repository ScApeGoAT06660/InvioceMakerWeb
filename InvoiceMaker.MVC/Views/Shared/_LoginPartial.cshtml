@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item d-flex align-items-center">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"
           style="margin-top: 3px;">
            Profil
        </a>
    </li>

    <li class="nav-item d-flex align-items-center">
        <form class="d-inline w-100" asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit"
                    class="btn btn-link nav-link text-white p-0 text-start w-100"
                    style="text-decoration: none;">
                Wyloguj
            </button>
        </form>
    </li>


}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Zarejestruj</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
    </li>
}



}