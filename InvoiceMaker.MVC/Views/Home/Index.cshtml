@{
    ViewData["Title"] = "Home Page";
}

@{
    ViewData["Title"] = "Strona główna";
}

@if (User.Identity?.IsAuthenticated ?? false)
{
    <h1>Witaj, @User.Identity.Name!</h1>
    <p>Miło Cię znowu widzieć. Co chcesz dziś zrobić?</p>
    <div class="row text-center">
        <a asp-controller="Invoice" asp-action="Create" class="btn-main">➕ Nowa faktura</a>
        
    </div>
}
else
{
    <div class="text-center">
        <h1>Witamy w Invoice Maker</h1>
        <p class="lead">Prosta aplikacja do tworzenia faktur. Zaloguj się, aby rozpocząć.</p>
        <a class="btn-main" href="/Identity/Account/Login">Zaloguj się</a>
        <a class="btn-main" href="/Identity/Account/Register">Zarejestruj się</a>
    </div>
}

<img src="https://niceillustrations.com/wp-content/uploads/2021/10/Invoice.png" alt="Ilustracja faktury" style="max-width:100%; height:auto;" />

