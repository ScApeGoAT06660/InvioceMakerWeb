@model InvoiceMaker.Application.Dto.SellerDto

@{
    ViewData["Title"] = @Model.Name + " - podgląd";
}

<div>
    <h2>@Model.Name</h2>
    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            NIP
        </dt>
        <dd class = "col-sm-10">
            @Model.VATID
        </dd>
        <dt class = "col-sm-2">
            Ulica
        </dt>
        <dd class = "col-sm-10">
            @Model.StreetAndNo
        </dd>
        <dt class = "col-sm-2">
            Kod pocztowy
        </dt>
        <dd class = "col-sm-10">
            @Model.Postcode
        </dd>
        <dt class = "col-sm-2">
            Miasto
        </dt>
        <dd class = "col-sm-10">
            @Model.City
        </dd>
		<dt class="col-sm-2">
			Konto bankowe
		</dt>
		<dd class="col-sm-10">
			@Model.BankAccount
		</dd>
		<dt class="col-sm-2">
			Bank
		</dt>
		<dd class="col-sm-10">
			@Model.Bank
		</dd>
		<dt class="col-sm-2">
			SWIFT
		</dt>
		<dd class="col-sm-10">
			@Model.SWIFT
		</dd>
    </dl>
</div>
<div>
    <a asp-controller="Seller" asp-action="Edit" asp-route-id="@Model.Id" class="btn-main">Edytuj</a>
    <a asp-action="Index">Wróć do listy</a>
</div>
