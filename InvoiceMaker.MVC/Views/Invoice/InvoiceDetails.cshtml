@model InvoiceMaker.Application.Dto.InvoiceDto

@{
    ViewData["Title"] = "InvoiceDetails";
}

<h1> @Model.Number InvoiceDetails</h1>

<div>
    <h4>InvoiceDto</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SaleDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SaleDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Place)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Place)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SellerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellerId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BuyerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BuyerId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BuyerType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BuyerType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentDeadline)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentDeadline)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SellerSignature)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellerSignature)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BuyerSignature)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BuyerSignature)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <h4>Pozycje faktury</h4>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Ilość</th>
                    <th>Jednostka</th>
                    <th>Netto</th>
                    <th>VAT</th>
                    <th>Brutto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Unit</td>
                        <td>@item.Netto.ToString("N2")</td>
                        <td>@item.VAT</td>
                        <td>@item.Brutto.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>

    </dl>
</div>
<div>
    <a asp-controller="Invoice" asp-action="InvoiceEdit" asp-route-id="@Model.Id">Edytuj</a>

    <a asp-action="InvoiceIndex">Back to List</a>
</div>
